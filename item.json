{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Item",
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "Id": {
        "type": "integer",
        "format": "int32"
      },
      "Name": {
        "type": "string"
      },
      "Description": {
        "type": "string"
      },
      "Type": {
        "$ref": "#/definitions/SlotType"
      },
      "Location": {
        "$ref": "#/definitions/ItemLocation"
      },
      "LocData": {
        "$ref": "#/definitions/SlotType"
      },
      "Count": {
        "type": "integer",
        "format": "int32"
      },
      "Grade": {
        "type": "integer",
        "format": "byte"
      },
      "Score": {
        "type": "integer",
        "format": "int32"
      },
      "ClassType": {
        "$ref": "#/definitions/CharacterClassType"
      },
      "Price": {
        "type": "integer",
        "format": "int32"
      },
      "DelaySeconds": {
        "type": "integer"
      },
      "OwnerId": {
        "type": "integer",
        "format": "int32"
      },
      "Owner": {
        "$ref": "#/definitions/Character"
      },
      "SetId": {
        "type": "integer",
        "format": "int32"
      },
      "Set": {
        "$ref": "#/definitions/Set"
      },
      "StatId": {
        "type": "integer",
        "format": "int32"
      },
      "Stat": {
        "$ref": "#/definitions/Stat"
      }
    },
    "definitions": {
      "SlotType": {
        "type": "integer",
        "oneOf": [
           {"const": 0, "description": "None"},
           {"const": 1, "description": "Helmet"},
           {"const": 2, "description": "Gloves"},
           {"const": 3, "description": "Boots"},
           {"const": 4, "description": "Body"},
           {"const": 5, "description": "Legs"},
           {"const": 6, "description": "Weapon"},
           {"const": 7, "description": "Shield"},
           {"const": 8, "description": "Consumable"}
        ]
      },
      "ItemLocation": {
        "type": "integer",
        "oneOf": [
            {"const": 0, "description": "Inventory"},
            {"const": 1, "description": "Npc"}
        ],       
        "description": "Where is item located"
      },
      "CharacterClassType": {
        "type": "integer",
        "oneOf": [
            {"const": 0, "description": "Warrior"},
            {"const": 1, "description": "Wizard"},
            {"const": 2, "description": "Warlock"},
            {"const": 3, "description": "Assassin"},
            {"const": 4, "description": "Archer"},
            {"const": -1, "description": "Unspecified"}
         ],
        "description": "Character class."
      },
      "Character": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "Id": {
            "type": "integer",
            "format": "int32"
          },
          "Name": {
            "type": "string"
          },
          "IsMale": {
            "type": "boolean"
          },
          "SkinId": {
            "type": "integer",
            "format": "byte"
          },
          "Level": {
            "type": "integer",
            "format": "int32"
          },
          "CurrentExp": {
            "type": "integer",
            "format": "int64"
          },
          "CurrentMp": {
            "type": "integer"
          },
          "CurrentHp": {
            "type": "integer"
          },
          "PvPKills": {
            "type": "integer"
          },
          "IsOnline": {
            "type": "boolean"
          },
          "LastTimeActive": {
            "type": "string",
            "format": "date-time"
          },
          "Created": {
            "type": "string",
            "format": "date-time"
          },
          "AccountId": {
            "type": "integer",
            "format": "int32"
          },
          "Account": {
            "$ref": "#/definitions/Account"
          },
          "LocationId": {
            "type": "integer",
            "format": "int32"
          },
          "Location": {
            "$ref": "#/definitions/Location"
          },
          "ClassId": {
            "type": "integer",
            "format": "byte"
          },
          "Class": {
            "$ref": "#/definitions/Class"
          }
        }
      },
      "Account": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "Id": {
            "type": "integer",
            "format": "int32"
          }
        }
      },
      "Location": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "Id": {
            "type": "integer",
            "format": "int32"
          }
        }
      },
      "Class": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "Id": {
            "type": "integer",
            "format": "int32"
          },
          "Name": {
            "type": "string"
          },
          "Description": {
            "type": "string"
          },
          "StatId": {
            "type": "integer",
            "format": "int32"
          },
          "Stat": {
            "$ref": "#/definitions/Stat"
          }
        }
      },
      "Stat": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "Id": {
            "type": "integer",
            "format": "int32"
          },
          "MDef": {
            "type": "integer",
            "format": "int32"
          },
          "PDef": {
            "type": "integer",
            "format": "int32"
          },
          "MAttack": {
            "type": "integer",
            "format": "int32"
          },
          "PAttack": {
            "type": "integer",
            "format": "int32"
          },
          "CritDmg": {
            "type": "integer",
            "format": "int32"
          },
          "CritChance": {
            "type": "integer",
            "format": "int32"
          },
          "Hp": {
            "type": "integer",
            "format": "int32"
          },
          "Mp": {
            "type": "integer",
            "format": "int32"
          },
          "HpReg": {
            "type": "integer",
            "format": "int32"
          },
          "MpReg": {
            "type": "integer",
            "format": "int32"
          },
          "HpPerLvl": {
            "type": "integer",
            "format": "int32"
          },
          "MpPerLvl": {
            "type": "integer",
            "format": "int32"
          },
          "OwnerId": {
            "type": "integer",
            "format": "int32"
          }
        }
      },
      "Set": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "Id": {
            "type": "integer",
            "format": "int32"
          },
          "Name": {
            "type": "string"
          }
        }
      }
    }
  }
  
